<TodoApp>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    TextInput:
        id: task_input
        hint_text: "Add a new task"
        size_hint_y: None
        height: 40
        multiline: False

    Button:
        text: "Add Task"
        size_hint_y: None
        height: 40
        on_press: app.add_task()

    ScrollView:
        size_hint: (1, None)
        size: (400, 300)

        GridLayout:
            id: tasks_layout
            cols: 1
            size_hint_y: None
            height: self.minimum_height


            text: "저장"
            on_press:
                root.save_record(root.ids.record_input.text)
                root.dismiss()
